{
  "compilerOptions": {
    "outDir": "./public/js/compiled/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true
  },
  "include": [
    "resources/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}